<h1>Product Form</h1>
<form action="/products/new" method="POST">
    <div>
        <label for="name">Name:</label>
        <input
            type="text"
            id="name"
            name="name"
            placeholder="John Smith"
            value={{this.data.form_state.product.name}}
        />
        {{#if this.data.errors.name}}
            <span>{{this.data.errors.name}}</span>
        {{/if}}
    </div>
    <div>
        <label for="price">Price:</label>
        <input
            type="text"
            id="price"
            name="price"
            placeholder="2000"
            value={{this.data.form_state.product.price}}
        />
        {{#if this.data.errors.price}}
            <span>{{this.data.errors.price}}</span>
        {{/if}}
    </div>
    <div>
        <label for="description">Description:</label>
        <input
            type="text"
            id="description"
            name="description"
            placeholder="Describe your product..."
            value={{this.data.form_state.product.description}}
        ></input>
        {{#if this.data.errors.description}}
            <span>{{this.data.errors.description}}</span>
        {{/if}}
    </div>
    <div>
        <a href="/"><button>CANCEL</button></a>
    </div>
    <div>
        <button>Submit</button>
    </div>
</form>